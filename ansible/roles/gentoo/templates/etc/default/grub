# /etc/default/grub

GRUB_DISTRIBUTOR="Gentoo"

GRUB_TIMEOUT=5

{% if 'console' in ansible_facts['cmdline'] %}
GRUB_CMDLINE_LINUX="earlyprintk console=tty0 console=ttyS0,115200n8"
GRUB_SERIAL_COMMAND="serial efi0 --speed=115200 --word=8 --parity=no --stop=1"
GRUB_GFXPAYLOAD_LINUX=text
{% else %}
GRUB_CMDLINE_LINUX="earlyprintk console=tty0 console=ttyS0,115200n8"
{% endif %}

GRUB_TERMINAL="console serial vga_text gfxterm"

